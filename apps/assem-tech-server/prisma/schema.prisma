datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Skin {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String?
  description String?
  weapon      Weapon?  @relation(fields: [weaponId], references: [id])
  weaponId    String?
  pattern     Pattern? @relation(fields: [patternId], references: [id])
  patternId   String?
}

model Weapon {
  id        String               @id @default(cuid())
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
  name      String?
  typeField EnumWeaponTypeField?
  skins     Skin[]
}

model Pattern {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?
  image     Json?
  skins     Skin[]
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
  username  String   @unique
  email     String?  @unique
  password  String
  roles     Json
}

enum EnumWeaponTypeField {
  Option1
}
